<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tipPresentation"
            type="github.paulmburu.wastemanagement.models.TipPresentation" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:paddingEnd="8dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="#1"
            android:text="@{tipPresentation.id}"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="@{tipPresentation.tip}"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="Join the nonprofit movement and display the standardized labels on your recycling bins to make it easier for everyone to recycle right, wherever they might be." />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>